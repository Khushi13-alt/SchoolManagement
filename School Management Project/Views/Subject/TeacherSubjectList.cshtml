@model IEnumerable<SubjectWithTeachersDTO>

@{
    ViewData["Title"] = "TeacherSubjectList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Subjects and Their Teachers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Subject Name</th>
            <th>Teachers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.SubjectName</td>
                <td>
                    @if (subject.Teachers != null && subject.Teachers.Any())
                    {
                        foreach (var teacher in subject.Teachers)
                        {
                            <div>@teacher.Name</div>
                        }
                    }
                    else
                    {
                        <div>No teachers assigned</div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
